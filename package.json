{
    "name": "typescript-action",
    "version": "0.0.0",
    "private": true,
    "description": "TypeScript template action",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package-build-img": "ncc build -o dist/buildImage src/buildImage.ts",
        "package-build-oneflow": "ncc build -o dist/buildOneFlow src/buildOneFlow.ts",
        "package-mirror-tools": "ncc build -o dist/mirrorTools src/mirrorTools.ts",
        "package-cache-complete": "ncc build -o dist/cacheComplete src/cacheComplete.ts",
        "package-post-cache-complete": "ncc build -o dist/postCacheComplete src/postCacheComplete.ts",
        "package-post-cache-complete-matrix": "ncc build -o dist/cacheCompleteMatrix src/cacheCompleteMatrix.ts",
        "package": "concurrently \"npm:package-*\"",
        "test": "jest",
        "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
        "fast": "npm run build && npm run package && npm test",
        "pub": "rm -rf dist && npm run all && git add . && git commit -m publishing && git push"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions/typescript-action.git"
    },
    "keywords": [
        "actions",
        "node",
        "setup"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.5.0",
        "@actions/exec": "^1.1.0",
        "@actions/github": "^5.0.0",
        "@actions/glob": "^0.2.0",
        "@actions/io": "^1.1.1",
        "@actions/tool-cache": "^1.7.1",
        "ali-oss": "^6.16.0",
        "dockerode": "^3.3.0",
        "node-ssh": "^12.0.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/ali-oss": "^6.0.10",
        "@types/dockerode": "^3.2.7",
        "@types/node": "^16.3.3",
        "@types/semver": "^7.3.8",
        "@types/ssh2": "^0.5.48",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/parser": "^4.28.3",
        "@vercel/ncc": "^0.30.0",
        "concurrently": "^6.2.1",
        "eslint": "^7.31.0",
        "eslint-plugin-github": "^4.1.1",
        "eslint-plugin-jest": "^24.4.2",
        "jest": "^27.0.6",
        "js-yaml": "^4.1.0",
        "prettier": "2.2.1",
        "ts-jest": "^27.0.3",
        "typescript": "^4.1.3"
    }
}
